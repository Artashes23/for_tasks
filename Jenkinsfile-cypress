pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                cache(caches: ['/var/lib/jenkins/.cache/Cypress']) {
                    script {
                        sh 'npm install'
                    }
                }
            }
        }
        stage('Run Cypress Tests') {
            steps {
                script {
                    sh 'npx cypress run'
                }
            }
        }
    }
}
