pipeline {
    agent any
    environment {
        NO_COLOR = '1'
    }
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Install Cypress') {
            steps {
                sh 'npx cypress install'
            }
        }
        stage('Run Cypress Tests') {
            steps {
                timeout(time: 30, unit: 'MINUTES') { 
                    sh '''
                    # Start Xvfb
                    Xvfb :99 -screen 0 1280x1024x24 &

                    # Set DISPLAY environment variable
                    export DISPLAY=:99
                    sleep 5

                    # Run Cypress tests
                    npx cypress run
                    '''
                }
            }
        }
    }
}