pipeline {
    agent any

    environment {
        NO_COLOR = 1
        CYPRESS_CACHE = '/var/lib/jenkins/.cache/Cypress'
    }

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                script {
                    // Unstash cached Cypress binary and run tests
                    sh 'npx cypress run'
                }
            }
        }
    }
}
