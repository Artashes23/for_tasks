pipeline {
    agent any
    environment {
        NO_COLOR = '1'
    }
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Install Cypress') {
            steps {
                script {
                    sh '''
                        npx cypress cache clear
                        npx cypress install
                    '''
                }
            }
        }
        stage('Run Cypress Tests') {
            steps {
                sh '''
                sudo apt-get install libatk-bridge2.0-0 libgtk-3-0 libx11-xcb1 libnss3 libgdk-pixbuf2.0-0 libdbus-1-3 libasound2
                sudo apt-get install libxcomposite1 libxdamage1 libxtst6 xdg-utils libappindicator3-1 libatk1.0-0 libcups2 libnspr4
                sudo apt-get install xvfb
                Xvfb :99 -screen 0 1280x1024x24 &
                export DISPLAY=:99
                npx cypress run
                '''
            }
        }
    }
}


