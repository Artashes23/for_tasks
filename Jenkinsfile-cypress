pipeline {
    agent any

    environment {
        NO_COLOR = 1
        CYPRESS_CACHE = '/var/lib/jenkins/.cache/Cypress'
    }

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    // Install npm dependencies and Cypress binary
                    sh 'npm install'
                    
                    // Install Cypress binary if not already cached
                    sh 'npx cypress install'
                }
            }
        }

        stage('Cache Cypress Binary') {
            steps {
                script {
                    // Cache the Cypress binary to avoid re-downloading it
                    stash includes: '**/.cache/Cypress/**', name: 'cypress_cache'
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                script {
                    // Unstash cached Cypress binary and run tests
                    unstash 'cypress_cache'
                    sh 'npx cypress run'
                }
            }
        }
    }

    post {
        always {
            // Clean up any unused caches (if necessary)
            cleanWs()
        }
    }
}
