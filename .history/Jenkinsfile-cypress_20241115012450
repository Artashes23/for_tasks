pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Install Cypress') {
            steps {
                sh 'npx cypress install'
            }
        }
        stage('Run Cypress Tests') {
            steps {
                sh 'Xvfb :99 -screen 0 1280x1024x24 &'
                sh 'export DISPLAY=:99'
                sh 'npx cypress run'
            }
        }
    }
}

